@model IEnumerable<WebMercadoMVC.Models.Oferta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tabela de Ofertas</h1>

<p>
    <a input type="submit" class="btn btn-success" asp-action="Create">Adicionar uma nova Oferta</a>
</p>

<table class="table bg-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataoferta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.produto.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataoferta)
            </td>
            <td>
                    <a input type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a input type="submit" class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                    <a input type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
