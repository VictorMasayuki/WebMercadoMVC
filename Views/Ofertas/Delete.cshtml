@model WebMercadoMVC.Models.Oferta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remover Oferta</h1>

<h3>Deseja remover esta Oferta?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.produto.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oferta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oferta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dataoferta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataoferta)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remover" class="btn btn-secondary" /> |
        <a input type="submit" class="btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
