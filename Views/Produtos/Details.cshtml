@model WebMercadoMVC.Models.Produto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes do Produto</h1>

<div>
    <hr />
    <dl class="table">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.qtde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.qtde)
        </dd>
    </dl>
</div>
<div>
    <a input type="submit" class="btn btn-primary btn-info" asp-action="Edit" asp-route-id="@Model?.id">Editar</a> |
    <a input type="submit" class="btn btn-danger" asp-action="Index">Voltar</a>
</div>
