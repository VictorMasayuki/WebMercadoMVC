@model WebMercadoMVC.Models.Compra

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Compra</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="clienteid" class="control-label"></label>
                <select asp-for="clienteid" class="form-control" asp-items="ViewBag.clienteid"></select>
                <span asp-validation-for="clienteid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produtoid" class="control-label"></label>
                <select asp-for="produtoid" class="form-control" asp-items="ViewBag.produtoid"></select>
                <span asp-validation-for="produtoid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidaderequisitada" class="control-label"></label>
                <input asp-for="quantidaderequisitada" class="form-control" />
                <span asp-validation-for="quantidaderequisitada" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-success" /> |
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
