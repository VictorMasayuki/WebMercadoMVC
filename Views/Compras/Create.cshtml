@model WebMercadoMVC.Models.Compra

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Adicionar Novas Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="clienteid" class="control-label"></label>
                <select asp-for="clienteid" class="form-control" asp-items="ViewBag.clienteid"></select>
            </div>
            <div class="form-group">
                <label asp-for="produtoid" class="control-label"></label>
                <select asp-for="produtoid" class="form-control" asp-items="ViewBag.produtoid"></select>
            </div>
            <div class="form-group">
                <label asp-for="quantidaderequisitada" class="control-label"></label>
                <input asp-for="quantidaderequisitada" class="form-control" />
                <span asp-validation-for="quantidaderequisitada" class="text-danger"></span>
                <br />
                <div>
                    <input type="submit" value="Adicionar" class="btn btn-success" /> |
                    <a input type="submit" class="btn btn-danger" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
